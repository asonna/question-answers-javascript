{{#if addNewQuestion}}
<h1>New Question</h1>
<div>
  <form>
    <div>
      <label for="question">Question</label>
      {{input  class="form-control" value=question id="question"}}
    </div><br>

    <div>
      <label for="author">Author</label>
      {{input  class="form-control" value=author id="author"}}
    </div><br>

    <div>
      <label for="notes">Additional Notes</label>
      {{input  class="form-control"  value=notes id="notes"}}
    </div><br>

    <button class="btn btn-info" {{action 'saveQuestion1'}}>Save</button>
  </form>
</div>
{{else}}
  <button class="btn btn-primary" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
